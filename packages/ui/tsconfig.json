{
  "compilerOptions": {
    // use latest module system
    "module": "ESNext",
    // use EMCAScript (JS) 2020 - let vite (rollup) handle compatibility
    "target": "ES2020",
    "outDir": "dist",
    "declaration": false, // Generate corresponding '.d.ts' file
    "declarationMap": false, // Don't create sourcemaps for '.d.ts' files
    "rootDir": "./src",
    // strict type checks
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "jsx": "react",
    // include dom API for definitions like window on compile
    "lib": ["dom"],
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "compileOnSave": true,
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules",
    "dist"
  ],
  "include": ["**/*.d.ts", "./declarations.d.ts", "**/*.ts", "**/*.tsx", "**/*.module.scss"]
}
