{
  "name": "@rothko-ui/tokens",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxo-ai/rothko-ui.git",
    "directory": "packages/tokens"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "license": "MIT",
  "author": "luxo-ai <luxo@rothko-ui.com>",
  "description": "style tokens and tailwind plugin for rothko-ui",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "types": "dist/src/src/index.d.ts",
  "source": "src/index.ts",
  "scripts": {
    "prebuild": "yarn clean",
    "build": "node ./src/build.js && sleep 1 && echo 'building...' && microbundle --format modern,cjs --no-sourcemap",
    "clean": "rimraf build src/tokens dist",
    "lint": "eslint ./src --ext .js,.ts"
  },
  "dependencies": {
    "deepmerge": "^4.3.1",
    "flat": "^6.0.1"
  },
  "devDependencies": {
    "@prettier/sync": "^0.5.1",
    "@rothko-ui/utils": "^1.1.0",
    "microbundle": "^0.15.1",
    "rimraf": "^3.0.2",
    "style-dictionary": "^3.9.2",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.1",
    "tsc": "^2.0.4",
    "typescript": "^4.8.4"
  },
  "exports": {
    ".": {
      "import": "./dist/index.modern.js",
      "require": "./dist/index.js"
    },
    "./web/dark.css": {
      "import": "./build/dark-variables.css",
      "require": "./build/dark-variables.css"
    },
    "./web/global.css": {
      "import": "./build/global-variables.css",
      "require": "./build/global-variables.css"
    },
    "./web/light.css": {
      "import": "./build/light-variables.css",
      "require": "./build/light-variables.css"
    }
  },
  "files": [
    "dist",
    "build/*.css",
    "LICENSE.txt"
  ],
  "gitHead": "fa0338bf50f574c0a42d143d3bd317a40a6e3fb9"
}
