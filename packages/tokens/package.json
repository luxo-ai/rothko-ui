{
  "name": "@rothko-ui/tokens",
  "version": "1.0.14",
  "repository": {
    "type": "git",
    "url": "https://github.com/rothko-ui/rothko-ui",
    "directory": "packages/tokens"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "license": "MIT",
  "author": "luxo-ai <luxo.ai@proton.me>",
  "description": "style tokens for rothko-ui",
  "dependencies": {
    "style-dictionary": "^3.7.1"
  },
  "devDependencies": {
    "microbundle": "^0.15.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "prebuild": "yarn clean",
    "build": "microbundle --format modern --no-sourcemap && ts-node-esm --skip-project ./src/build.ts",
    "clean": "rimraf build",
    "lint": "eslint ./src --ext .js,.ts",
    "lint:fix": "eslint ./src --ext .js,.ts --fix"
  },
  "exports": {
    ".": {
      "import": "./dist/index.modern.js",
      "require": "./dist/index.js"
    },
    "./web/dark.css": {
      "import": "./build/dark-variables.css",
      "require": "./build/dark-variables.css"
    },
    "./web/global.css": {
      "import": "./build/global-variables.css",
      "require": "./build/global-variables.css"
    },
    "./web/light.css": {
      "import": "./build/light-variables.css",
      "require": "./build/light-variables.css"
    }
  },
  "module": "dist/index.modern.js",
  "types": "dist/index.d.ts",
  "source": "index.ts",
  "files": [
    "dist/index.js",
    "build/*.css"
  ],
  "gitHead": "fa0338bf50f574c0a42d143d3bd317a40a6e3fb9"
}
