{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "outDir": "dist",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "rootDir": "./src",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["dom", "esnext"]
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules",
    "dist"
  ],
  "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx"]
}
